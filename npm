alias nr="npm run"
alias nrs="npm -s run"
alias nt="npm -s test"
alias ntw="npm -s run testw"
alias npms="npm start"
alias npmlag="npm la --depth=0 --global"
alias npmla="npm la --depth=0"
alias npmlsg="npm ls --depth=0 --global"
alias npmls="npm ls --depth=0"
alias npmi="npm install --save"
alias npmr="npm uninstall --save"
alias npmidv="npm install --save-dev"
alias npmrdv="npm uninstall --save-dev"
alias npmig="npm install -g"
alias npmrg="npm uninstall -g"
alias npmul="echo npm installed version && npm --version && echo npm latest version available && npm view npm@latest version && echo any key to continue npm upgrade or break && read && sudo npm install -g npm@latest"
alias npmug="npm-check -g -u"
alias npmu="npm-check -u"
alias npmpub="npm publish --access public"
# only works for local registry not npm
alias npmrepub="npm unpublish --force && npm publish"
